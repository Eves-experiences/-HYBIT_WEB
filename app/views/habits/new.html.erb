        <h3>Start a new habit</h3>

        <%= simple_form_for(@habit) do |f| %>
          <div class="form-inputs">
            <%= f.input :category,
                        label: "Select a habit category",
                        required: false,
                        selected: 'Energy',
                        autofocus: true,
                        collection: ['Energy', 'Productivity', 'Relationships', 'Recharging', 'Order', 'Purpose', 'Creativity', 'None'] %>
            <%= f.input :name,
                        label: "Habit name",
                        required: true,
                        placeholder: "Your new habit",
                        autofocus: true %>
            <%= f.input :habit_public,
                        label: "Habit visible on Hybit-profile?",
                        collection: [['Sure!', true], ['Private please..', false]],
                        as: :radio_buttons,
                        input_html: { selected: 'Sure!' },
                        required: true,
                        autofocus: true %>
            <%= f.input :start_date,
                        label: "When are you starting?",
                        required: false,
                        as: :date,
                        discard_year: true,
                        autofocus: true %>
            <%= f.input :end_date,
                        label: "Track this habit until?",
                        required: false,
                        as: :date,
                        discard_day: true,
                        include_blank: true,
                        autofocus: true %>
            <%= f.input :frequency_number,
                        label: "Times",
                        collection: [['1 time', 1], ['2 times', 2], ['3 times', 3], ['4 times', 4], ['5 times', 5], ['6 times', 6], ['7 times', 7]],
                        required: true,
                        selected: 1,
                        autofocus: true %>
            <%= f.input :frequency_variable,
