                        include_blank: false,
                        autofocus: true %>
            <%= f.input :motivation,
                        label: "What's your reason why?",
                        as: :text,
                        placeholder: "Having a clearly defined reason will keep you on track when building a new habit...",
                        autofocus: true %>
            <%= f.input :motivation_public,
